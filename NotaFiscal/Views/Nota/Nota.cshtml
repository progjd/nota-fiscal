@model NotaFiscal.Models.Notas;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Nota";
}

<h1>Nota</h1>

<main>

    <form class="row" role="form" enctype="multipart/form-data" asp-action="UpdateNota" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="col-5 text-center">
            <div class="capa">
               

                <p class="py-3">
                    <label class="btn btn-outline-dark">
                        Alterar Capa
                        <input id="ImagemCapa" asp-for="@Model.Capa" type="file" class="d-none" accept="image/x-png" />
                    </label>
                </p>
            </div>
        </div>

        <div class="col-5">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroNota" class="control-label"></label>
                <input asp-for="NumeroNota" class="form-control" />
                <span asp-validation-for="NumeroNota" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Serie" class="control-label"></label>
                <input asp-for="Serie" class="form-control" />
                <span asp-validation-for="Serie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncideBC" class="control-label"></label>
                <input asp-for="IncideBC" class="form-control" />
                <span asp-validation-for="IncideBC" class="text-danger"></span>
            </div>

            

            <footer class="form-group">
                <button class="btn btn-outline-success">GRAVAR</button>
                <button id="btnExcluir" class="btn btn-outline-danger">EXCLUIR</button>
            </footer>
        </div>

    </form>

</main>

